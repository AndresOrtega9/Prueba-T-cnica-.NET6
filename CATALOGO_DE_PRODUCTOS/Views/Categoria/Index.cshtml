@model IEnumerable<CATALOGO_DE_PRODUCTOS.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h1>Crear categoria</h1>
<hr />
<p>
    <a class="btn btn-success" asp-action="Create">Crear +</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
                @* <a asp-action="Details" asp-route-id="@item.Id">Detalle</a> | *@
            </td>
        </tr>
}
    </tbody>
</table>
